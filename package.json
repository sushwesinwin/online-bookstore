{
  "name": "online-bookstore-system",
  "version": "1.0.0",
  "description": "A comprehensive online bookstore system with Next.js frontend and NestJS backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:frontend": "pnpm --filter bookstore-frontend dev",
    "dev:backend": "pnpm --filter bookstore-backend dev",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:frontend": "pnpm --filter bookstore-frontend build",
    "build:backend": "pnpm --filter bookstore-backend build",
    "test": "pnpm run test:backend && pnpm run test:frontend",
    "test:frontend": "pnpm --filter bookstore-frontend test",
    "test:backend": "pnpm --filter bookstore-backend test",
    "lint": "pnpm run lint:frontend && pnpm run lint:backend",
    "lint:frontend": "pnpm --filter bookstore-frontend lint",
    "lint:backend": "pnpm --filter bookstore-backend lint",
    "format": "pnpm run format:frontend && pnpm run format:backend",
    "format:frontend": "pnpm --filter bookstore-frontend format",
    "format:backend": "pnpm --filter bookstore-backend format",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}